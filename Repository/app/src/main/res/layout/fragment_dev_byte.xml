<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="devByteViewModel"
                  type="com.example.duong.repository.viewmodels.DevByteViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_grey">
        <!--loading icon sá»­ dung progressBar-->
        <ProgressBar
                android:id="@+id/loading_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isNetworkError = "@{safeUnbox(devByteViewModel.eventNetworkError)}"
                app:playlist = "@{devByteViewModel.playlist}"
                android:layout_gravity="center" />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/dev_byte_item" />
    </FrameLayout>
</layout>
