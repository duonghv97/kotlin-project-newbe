        <variable name="trackerViewModel"
                  type="com.example.duong.trackmysleepquality.screentracker.SleepTrackerViewModel">

        </variable>
    </data>
    <android.support.constraint.ConstraintLayout
            tools:context=".screentracker.SleepTrackerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
